<div class = "container">
      <div class = "container-fluid" id="top-cont">
        
        <div class = "row">
        	<div class = "well" id="top">
        		<img style = "height:auto; width:auto; max-width:300px; max-height:300px" src='<%= @game.image_url %>' class = "img-rounded">

        	</div>
        	<div class = "well" id ="info">
        		<!--:genres,  -->
        		<p>Title: <%= @game.title %></p>
        		<p> Genre:
        			<% @game.genres.each do |genre| %>
        				<%= genre %>
        			<% end %>
        		</p>
        		<p>MetaCritic Rating: <%= @game.metacritic_rating %></p>
        		<p>Release Date:<%= @game.release_date %></p>
        		<p>Developer:<%= @game.developer %></p>
        		<p>Publisher:<%= @game.publisher %></p>
        		<p>Rating:<%= @game.esrb_rating %></p>
        		<p>Players: <%= @game.players %></p>
        		<p>Coop: <%= @game.coop %></p>

        	</div>
        	<% @game.game_sales.each do |sale| %>
        	<div class = "well" id = "top">
        		<p><%= sale.store %> </p>
        	</div>
        	<% end %>
        	
        </div>
      </div> 
